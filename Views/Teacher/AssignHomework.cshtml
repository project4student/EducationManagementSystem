@{
	ViewBag.PageTitle = "Assign Homework";
}

<div class="glass rounded-3 container-fluid formContainer p-4 d-flex align-items-center justify-content-center">
	<form class="row" style="max-width: 991px;" id="assignHomeworkForm">
		<div class="mb-2 col-12 col-md-6">
			<label for="SubjectId">Subject</label>
			<select class="form-select" id="SubjectId" name="SubjectId" placeholder="Select Subject">
				<option value="">Select Subject</option>
			</select>
		</div>
		<div class="mb-2 col-12 col-md-6">
			<label for="Title">Title</label>
			<input type="text" class="form-control" id="Title" name="Title" placeholder="Enter Title">
		</div>
		<div class="mb-2 col-12 col-md-6">
			<label for="StartDate">Start Date</label>
			<div class="datePicker">
				<input type="text" class="form-control" id="StartDate" readonly name="StartDate"
					placeholder="DD/MM/YYYY">
			</div>
		</div>
		<div class="mb-2 col-12 col-md-6">
			<label for="DueDate">Due Date</label>
			<div class="datePicker">
				<input type="text" class="form-control" id="DueDate" name="DueDate" readonly placeholder="DD/MM/YYYY">
			</div>
		</div>
		<div class="mb-2 col-12">
			<label for="HomeworkFile">Homework File</label>
			<input type="file" class="form-control" id="HomeworkFile" name="HomeworkFile"
				placeholder="Choose Homework File">
		</div>
		<div class="mb-2 col-12">
			<label for="Description">Description</label>
			<textarea type="text" class="form-control" id="Description" name="Description"
				placeholder="Enter Description"></textarea>
		</div>
		<div class="mb-2 col-12">
			<button type="submit" class="btn btn-outline-warning">Assign</button>
		</div>
	</form>
</div>

@section CustomScripts
{
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"
	integrity="sha256-hlKLmzaRlE8SCJC1Kw8zoUbU8BxA+8kR3gseuKfMjxA=" crossorigin="anonymous"></script>
<script src="~/JS/assignHomework.js" asp-append-version="true"></script>
}